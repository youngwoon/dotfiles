# Document Blocks and Environments
# ================================
snippet begin \begin{} ... \end{} block
	\begin{${1:env}}
	    ${0}
	\end{$1}
snippet \begin \begin{} ... \end{} block
	\begin{${1:env}}
	    ${0}
	\end{$1}
snippet $$ Math equation block
	$$
	    ${0}
	$$
snippet align \begin{align} ... \end{align} block
	\begin{align}
	    ${0}
	\end{align}
snippet aligned \begin{aligned} ... \end{aligned} block
	\begin{aligned}
	    ${0}
	\end{aligned}
snippet flalign \begin{flalign} ... \end{flalign} block
	\begin{flalign}
	    ${0}
	\end{flalign}
snippet center \begin{center} ... \end{center} block
	\begin{center}
	    ${0}
	\end{center}
snippet equation \begin{equation} ... \end{equation} block
	\begin{equation}
	    ${0}
	\end{equation}
snippet minted \begin{minted} ... \end{minted} block
	\begin{minted}
	    ${0}
	\end{minted}
snippet verbatim \begin{verbatim} ... \end{verbatim} block
	\begin{verbatim}
	    ${0}
	\end{verbatim}
snippet tabular \begin{tabular} ... \end{tabular} block
	\begin{tabular}{${2:c}}
	    ${0}
	\end{tabular}
snippet enum \begin{enumerate} ... \end{enumerate} block
	\begin{enumerate}
	    ${0}
	\end{enumerate}
snippet item \begin{itemize} ... \end{itemize} block
	\begin{itemize}
	    \item ${0}
	\end{itemize}
#
# Math Shortcuts
# ==============
snippet cases \begin{cases} ... \end{cases} block
	\begin{cases}
	    ${1}    & \text{ if }  ${2} \\\\
	    ${0}    & \text{ otherwise}
	\end{cases}
snippet pmatrix 2X2 pmatrix (with round brackets)
	\begin{pmatrix}
	    ${1}  &  ${2} \\\\
	    ${3}  &  ${4}
	\end{pmatrix}
snippet bmatrix 2X2 bmatrix (with right brackets)
	\begin{bmatrix}
	    ${1}  &  ${2} \\\\
	    ${3}  &  ${4}
	\end{bmatrix}
snippet matrix 2X2 matrix (or other)
	\begin{${1:/p/b/v/V/B/small}matrix}
	    ${2:A}  &  ${3:B} \\\\
	    ${4:C}  &  ${5:D}
	\end{$1matrix}
#
# Useful Preamble Things
# ======================
snippet preamble Load useful preambles
	\newcommand{\argmax}{\operatornamewithlimits{argmax}}
	\newcommand{\argmin}{\operatornamewithlimits{argmin}}
	\newcommand\norm[1]{\left\lVert#1\right\rVert}
snippet tightlist Preambles for \tightlist
	\providecommand{\tightlist}{\setlength{\itemsep}{0pt}\setlength{\parskip}{0pt}}


# Figure, etc.
# ============
snippet graphics
	\includegraphics[width=\textwidth]{${1:filename.png}}
#
snippet figure
	\begin{figure}[htb] \begin{center}
	    \includegraphics[width=\textwidth]{${1:filename.png}}
	    \caption{${2:Caption here}}
	    \label{fig:${3:figure1}}
	\end{center} \end{figure}
#
snippet subfigure
	\begin{figure}[h!]
	\centering
	\begin{subfigure}[b]{0.45\textwidth}
	    \centering
	    ${2:% includegraphics Here}
	    \caption{First Subfigure}
	\end{subfigure}
	\hfill
	\begin{subfigure}[b]{0.45\textwidth}
	    \centering
	    ${3:% Figure Here}
	    \caption{Second Subfigure}
	\end{subfigure}
	\end{figure}
#
snippet newcolumntype
	\newcolumntype{P}[1]{>{\centering\arraybackslash}p{#1}}
	%\setlength\tabcolsep{2pt} % default value: 6pt
